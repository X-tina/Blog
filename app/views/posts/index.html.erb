<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      
      
      <td> <%= link_to 'Show', post %> </br> </td>
      <td><%= link_to 'Edit', edit_post_path(post)%></td>

      <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></br> </td>
      
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>